<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_replay_24"
            android:scaleType="fitCenter"
            android:id="@+id/set_hand_image_view"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hand_animation"
            android:scaleType="centerInside"
            android:id="@+id/handAnimation"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:src="@drawable/com_rock"
            android:scaleType="fitCenter"
            android:backgroundTint="#FFEB38"
            android:id="@+id/rock_button"
            android:onClick="button_click"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:src="@drawable/com_paper"
            android:scaleType="fitCenter"
            android:backgroundTint="#FFEB38"
            android:id="@+id/paper_button"
            android:onClick="button_click"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:src="@drawable/com_scissors"
            android:scaleType="fitCenter"
            android:backgroundTint="#FFEB38"
            android:id="@+id/scissors_button"
            android:onClick="button_click"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:src="@drawable/baseline_replay_24"
            android:scaleType="fitCenter"
            android:backgroundTint="#FFEB38"
            android:id="@+id/replay_button"
            android:onClick="button_click"/>

    </LinearLayout>


</LinearLayout>